<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= lang('login.title') %></title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <!-- <link rel="stylesheet" href="/front/css/login.css" /> -->
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body>
    <div class="login-container">
      <h2><%= lang('login.form.title') %></h2>

      <form id="login-form" method="post">
        <div class="form-group">
          <input
            type="text"
            id="username"
            class="form-control"
            name="username"
            placeholder="<%= lang('login.form.username') %>"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="password"
            id="password"
            class="form-control"
            name="password"
            placeholder="<%= lang('login.form.password') %>"
            required
          />
        </div>
        <button
          type="button"
          onclick="submitLogin()"
          class="btn btn-login btn-block"
        >
          <%= lang('login.form.login') %>
        </button>
      </form>
    </div>
  </body>
  <!-- <script src="/front/js/login.js"></script> -->
  <script type="module" src="/js/login.js"></script>
</html>
