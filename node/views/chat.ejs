<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="stylesheet" href="/front/css/chat.css" /> -->
    <link rel="stylesheet" href="/css/chat.css" />
    <title><%= lang('chat.title') %></title>
  </head>
  <body>
    <div class="chat-container" id="chat-page">
      <div class="users-list">
        <h2><%= lang('chat.friend') %></h2>
        <div class="users-list-container">
          <ul id="friend"></ul>
        </div>
        <h2><%= lang('chat.onlineUsers') %></h2>
        <div class="users-list-container">
          <ul id="connectedUsers"></ul>
        </div>
        <div>
          <p id="connected-user"></p>
          <a class="logout" href="javascript:void(0)" id="logout"
            ><%= lang('chat.logout') %></a
          >
        </div>
      </div>

      <div class="chat-area">
        <div id="chat-banner"></div>
        <div class="chat-area" id="chat-messages"></div>
          <div class="message-input">
            <input
              autocomplete="off"
              type="text"
              id="message"
              placeholder="Type your message..."
            />
            <button id="sendButton">Send</button>
          </div>
      </div>
    </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sockjs-client/1.1.4/sockjs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/stomp.js/2.3.3/stomp.min.js"></script>
    <!-- <script src="/front/js/chat.js"></script> -->
    <!-- <script src="/js/encryption.js" defer></script> -->
    <script type="module" src="/js/chat.js"></script>
  </body>
</html>
